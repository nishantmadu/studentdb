<%= content_tag(:span, "#{student.house.name}", class: "label label-#{student_house_color(student)} pull-right") %>
<dl class="dl-horizontal">
  <% [:roll_number, :name, :fathers_name, :email, :gender, :dob, :phone, :address].each do |prop| %>
    <dt><%= prop.to_s.gsub("_", " ").titlecase %></dt>
    <dd><i>
      <% if prop == :gender %>
        <%= Student::Gender::label(student.gender) %>
      <% elsif prop == :dob %>
        <%= student.dob.strftime("%B %-d, %Y") %>
      <% else %>
        <%= student.send(prop) %>
      <% end %>
    </dd></i>
  <% end %>
</dl>
